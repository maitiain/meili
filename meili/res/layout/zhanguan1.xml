<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/mainbg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#33000000" />

    <RelativeLayout
        android:id="@+id/shadowbg"
        android:layout_width="320dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shadow1" >

        <ImageView
            android:id="@+id/bg1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/home_info"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/home_info" />

        <ImageView
            android:id="@+id/home_collect"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_toLeftOf="@id/home_info"
            android:scaleType="center"
            android:src="@drawable/home_collect" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shadowbg"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:textSize="14dp" />

</RelativeLayout>